<?xml version='1.0' encoding='utf-8'?>
<widget id="lopes.rewMov.rewMov" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RewMove</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/Icon-36.png" />
        <icon density="mdpi" src="res/icon/Icon-48.png" />
        <icon density="hdpi" src="res/icon/Icon-72.png" />
        <icon density="xhdpi" src="res/icon/Icon-96.png" />
        <icon density="xxhdpi" src="res/icon/Icon-144.png" />
        <icon density="xxxhdpi" src="res/icon/Icon-192.png" />

        <splash src="res/splash/Splash1920x1280.png" density="land-xxxhdpi"/>
        <splash src="res/splash/Splash1280x1920.png" density="port-xxxhdpi"/>
        <splash src="res/splash/Splash1600x960.png" density="land-xxhdpi"/>
        <splash src="res/splash/Splash960x1600.png" density="port-xxhdpi"/>
        <splash src="res/splash/Splash1280x720.png" density="land-xhdpi"/>
        <splash src="res/splash/Splash720x1280.png" density="port-xhdpi"/>
        <splash src="res/splash/Splash800x480.png" density="land-hdpi"/>
        <splash src="res/splash/Splash480x800.png" density="port-hdpi"/>
        <splash src="res/splash/Splash480x320.png" density="land-mdpi"/>
        <splash src="res/splash/Splash320x480.png" density="port-mdpi"/>
        <splash src="res/splash/Splash300x200.png" density="land-ldpi"/>
        <splash src="res/splash/Splash200x300.png" density="port-ldpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
